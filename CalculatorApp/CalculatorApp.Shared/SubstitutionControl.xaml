<UserControl
    x:Class="CalculatorApp.SubstitutionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculatorApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400" Height="79" Margin="0,5,0,0">
    
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition/>
    		<ColumnDefinition/>
    	</Grid.ColumnDefinitions>
    	<TextBox TextWrapping="Wrap" Margin="15,0" Text="{Binding Key, Mode=TwoWay}" Background="White" Foreground="#FF0084CB" BorderThickness="0" VerticalAlignment="Center" PlaceholderText="from"/>
    	<TextBox TextWrapping="Wrap" Grid.Column="1" Margin="15,0" Text="{Binding Value, Mode=TwoWay}" BorderThickness="0" Background="White" Foreground="Black" VerticalAlignment="Center" PlaceholderText="to"/>

    </Grid>
</UserControl>
